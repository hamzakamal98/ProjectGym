@model IEnumerable<Gym_DataBase.Models.Users>

@{
    ViewData["Title"] = "List";
    Layout = "/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="bg-secondary rounded h-100 p-4">
            <a asp-action="Create" asp-controller="Trainer" class="btn btn-info">Create</a>
            <table class="table table-dark table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MobileNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RegistrationDate)
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MobileNo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegistrationDate)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-controller="Trainer" asp-route-UserID="@item.UserID" class="btn btn-success">Edit</a>
                                <a asp-action="Details" asp-controller="Trainer" asp-route-UserID="@item.UserID" class="btn btn-warning">Details</a>
                                <a asp-action="Delete" asp-route-UserID="@item.UserID" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

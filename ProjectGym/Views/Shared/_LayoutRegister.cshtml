<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @RenderBody()
    </div>
</body>
</html>

<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Open Sans", sans-serif;
    }

    body {
        display: flex;
        align-items: center;
        justify-content:center;
        min-height: 100vh;
        width: 100%;
        padding: 0 10px;

    }

        body::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: url("/assets/images/OIP.jpg"), #000;
            background-position: center;
            background-size: cover;
        }

    .wrapper {
        width: 400px;
        border-radius: 8px;
        padding: 30px;
        text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);

    }

    form {
        display: flex;
        flex-direction: column;
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #fff;
    }

    span {
        color:crimson;
        font-size: 12px; 
        font-weight: 500;
    }

    .input-field {
        position: relative;
        margin: 15px 0;
    }

        .input-field input {
            width: 100%;
            height: 40px;
            background: rgba(255, 255, 255, 0.1);
            border: 2px solid rgba(255, 255, 255, 0.5);
            border-radius: 8px;
            outline: none;
            font-size: 16px;
            color: #fff;
            padding: 10px;
            transition: all 0.3s ease;
        }

            .input-field input:focus {
                border-color: #fff;
                background: rgba(255, 255, 255, 0.2);
            }

        .input-field label {
            position: absolute;
            top: 8px;
            left: 15px;
            color: rgba(255, 255, 255, 0.7);
            font-size: 16px;
            pointer-events: none;
            transition: all 0.2s ease;
        }

        .input-field input:focus ~ label,
        .input-field input:valid ~ label {
            font-size: 0.8rem;
            top: -23px;
            left: 10px;
            color: #fff;
        }

  
    .wrapper a {
        color: #efefef;
        text-decoration: none;
    }

        .wrapper a:hover {
            text-decoration: underline;
        }

    button {
        background: #fff;
        color: #000;
        font-weight: 600;
        border: none;
        padding: 12px 20px;
        cursor: pointer;
        border-radius: 3px;
        font-size: 16px;
        border: 2px solid transparent;
        transition: 0.3s ease;
    }

        button:hover {
            color: #fff;
            border-color: #fff;
            background: rgba(255, 255, 255, 0.15);
        }

    .register {
        text-align: center;
        margin-top: 30px;
        color: #fff;
    }

</style>
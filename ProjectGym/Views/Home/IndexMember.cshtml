@model IEnumerable<Gym_DataBase.Models.Subscriptions>
@{
   // Layout = "/Views/Shared/_LayoutMember.cshtml";
    Layout = ViewData["Layout"] as string;
}

<section class="section" id="features">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="section-heading">
                    <h2>Choose <em>Subscriptions</em></h2>
                    <img src="assets/images/line-dec.png" alt="waves">
                    <p>Training Studio is free CSS template for gyms and fitness centers. You are allowed to use this layout for your business website.</p>
                </div>
            </div>

            @foreach (var item in Model)
            {
                <div class="col-lg-6">

                    <ul class="features-items">
                        <li class="feature-item">
                            <div class="left-icon">
                                <img src="assets/images/features-first-icon.png" alt="First One">
                            </div>
                            <div class="right-content">
                                <h4>@item.PlanName</h4>
                                <p>Please do not re-distribute this template ZIP file on any template collection website. This is not allowed.</p>
                                <h2><a asp-action="CreatePayments" asp-route-Id="@item.SubscriptionId" asp-controller="Payments">Subscribe</a></h2>
                            </div>
                        </li>
                    </ul>
                </div>

            }

        </div>
    </div>
</section> 
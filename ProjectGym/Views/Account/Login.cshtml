@using Gym_DataBase.ViewModel
@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glassmorphism Login Form | CodingNepal</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="wrapper">
        <form asp-action="Login" asp-controller="Account">
            <h2>Login</h2>
            <div class="input-field">
                <input type="text" asp-for="UserName" >
                <label asp-for="UserName" >Enter UserName</label>
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="input-field">
                <input type="password" asp-for="Password">
                <label asp-for="Password">Enter your Password</label>
                <span asp-validation-for="Password"></span>
            </div>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert" style="color:red">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="forget">
                <label for="remember">
                    <input type="checkbox" id="remember">
                    <p>Remember me</p>
                </label>
                <a href="#">Forgot password?</a>
            </div>
           
            <button type="submit">Log In</button>
            <div class="register">
                <p>Don't have an account? <a asp-action="Register" asp-controller="Account">Register</a></p>
            </div>
        </form>
    </div>
</body>
</html>

<link href="~/css/login.css" rel="stylesheet" />